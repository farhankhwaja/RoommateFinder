<!DOCTYPE html>
<html>
<head>
	<title>
		<%=title %>
	</title>

	<% include partials/head %>
</head>
<body class="container-fluid">
	<header>
        <% include('partials/header',{user:'user'}); %>
    </header>
	<% if (messages.length > 0) { %>
        <div class="alert alert-danger"><%= messages %></div>
    <% } %>

    <!-- Google Map -->
    <div class="col-md-7">
        <div id="map"></div>
    </div>

	<div class="col-md-5">

    <!-- Creates Main Panel -->
    <div class="panel panel-default">

        <!-- Panel Title -->
        <div class="panel-heading">
        	<h2 class="panel-title text-center">Sing Up!<span class="glyphicon glyphicon-map-marker"></span></h2>
        </div>
        <!-- Panel Body -->
        <div class="panel-body">
			<form class="form-signin" action="/signup" method="post" novalidate>
	        	<h2 class="form-signin-heading text-center"></h2>
	        
		        <label for="username" class="sr-only">Username</label>
		        <input type="text" id="username" name="username" class="form-control" placeholder="Username" required autofocus>

		        <label for="name" class="sr-only">Name</label>
		        <input type="text" id="name" name="name" class="form-control" placeholder="Name" required autofocus>

		        <label for="email" class="sr-only">E-mail</label>
		        <input type="email" id="email" name="email" class="form-control" placeholder="E-mail" required>
		        
		        <label for="password" class="sr-only">Password</label>
		        <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
		        
			    <div class="table-responsive">
			        <div id="locationField">
				      <input id="autocomplete" placeholder="Enter your address"
				             onFocus="geolocate()" type="text"></input>
				    </div>
				    <table id="address" class="table">
				      <tr>
				        <td class="label sr-only">Street address</td>
				        <td><input class="form-control" id="street_number" name="street_number"
				              disabled="true"></input></td>
				        <td colspan="2"><input class="form-control" id="route" name="route"
				              disabled="true"></input></td>
				      </tr>
				      <tr>
				        <td class="label sr-only">City</td>
				        <td colspan="3"><input class="form-control" id="locality" name="locality"
				              disabled="true"></input></td>
				      </tr>
				      <tr>
				        <td class="label sr-only">State</td>
				        <td><input class="form-control"
				              id="administrative_area_level_1" name="administrative_area_level_1" disabled="true"></input></td>
				      </tr>
				      <tr>
				      	<td class="label sr-only">Zip code</td>
				        <td><input class="form-control" id="postal_code" name="postal_code"
				              disabled="true"></input></td>
				      </tr>
				      <tr>
				        <td class="label sr-only">Country</td>
				        <td colspan="2"><input class="form-control"
				              id="country" name="country" disabled="true"></input></td>
				      </tr>
				      <tr>
				        <td class="label sr-only">Location</td>
				        <td colspan="1"><input class="form-control"
				              id="lattitude" name="lattitude" disabled="true"></input></td>
				        <td colspan="1"><input class="form-control"
				              id="longitude" name="longitude" disabled="true"></input></td>
				      </tr>
				    </table>
				</div>
		        
		        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign-Up</button>
	      	</form>

      	<div class="row">
		    <div class="center-block text-center">
				<a href="/oauth/facebook">Login with Facebook</a> |
				<a href="/oauth/twitter">Login with Twitter</a>
			</div>
		</div>
    </div>
    <footer>
        <% include partials/footer %>
    </footer>
</body>
</html>